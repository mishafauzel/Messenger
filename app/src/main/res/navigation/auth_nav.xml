<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav"
    app:startDestination="@id/authFragmentFragment">

    <fragment
        android:id="@+id/authFragmentFragment"
        android:name="com.example.messenger.auth.ui.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragmentFragment_to_messagesActivity"
            app:destination="@id/messagesActivity" />
    </fragment>
    <activity
        android:id="@+id/messagesActivity"
        android:name="com.example.messenger.messages.ui.MessagesActivity"
        android:label="activity_messages"
        tools:layout="@layout/activity_messages" />
</navigation>